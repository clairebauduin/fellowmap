<div class="home-container">
  <div class="home-content sign-in zi-9999">
    <h1>Connexion</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    placeholder: "adresse email" %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    placeholder: "mot de passe" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Connexion", class: "btn-pp" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="character zi-2">
      <%= image_tag "char-white.svg", alt: "fellowmap mascott" %>
  </div>

  <div class="rectangle-bg rectangle-bg-top">
    <%= image_tag "rectangle-top.svg", alt: "top rectangle background" %>
  </div>

  <div class="rectangle-bg rectangle-bg-bottom rectangle-bg-white">
    <%= image_tag "rectangle-bottom.svg", alt: "bottom rectangle background" %>
  </div>
</div>
