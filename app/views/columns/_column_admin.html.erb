<% @themes.each do |theme| %>
  <div class="column-roadmap admin">
    <!-- Theme -->
    <%= simple_form_for theme, url: roadmap_theme_path(id: theme.id, roadmap_id: @roadmap.id) do |f| %>
    <div class="theme">
      <%= f.input :temporality, label: false, input_html: {value: theme.temporality, class: "theme-temporality", id: "temporality-#{theme.id}"} %>
      <div class="column-content">
        <div class="upload-img">
            <% if !theme.cover.url.nil? %>
              <%= image_tag theme.cover.url %>
              <div class="black-filter">üñºÔ∏è</div>
            <% else %>
              üñºÔ∏è
            <% end %>
            <%= f.file_field :cover, class: "upload-cover", id: "upload1-#{theme.id}" %>
            <%= f.hidden_field :cover_cache, id: "upload2-#{theme.id}" %>
        </div>
        <%= f.input :name, input_html: {value: theme.name, class: "theme-name", id: "name-#{theme.id}"}, label: "Nom du th√®me" %>
        <%= f.input :description, input_html: {value: theme.description, class: "theme-description", id: "descthem-#{theme.id}"}  %>
        <%= f.button :submit, class: "patch", name: "patch-theme", style: "display: none", id: "patchthem-#{theme.id}" %>
      <% end %>
        <%= render partial: 'columns/column_admin_kpis.html.erb', locals: {theme: theme} %>
        <%= render partial: 'columns/column_admin_improvements.html.erb', locals: {theme: theme} %>
        <div class="delete-column mt-3 text-center">
        <%= button_to "Supprimer", {controller: :themes, action: 'destroy', id: theme.id, roadmap_id: @roadmap.id }, method: :delete, class: "btn btn-white btn-red", data: { confirm: 'Tu es s√ªr(e) de supprimer ce th√®me? Tout va dispara√Ætre.' } %>
        </div>
      </div>
    </div>
  </div>
<% end %>

