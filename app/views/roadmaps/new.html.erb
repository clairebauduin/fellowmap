<div class="home-container home-container-form">
  <div class="main-content sign-up zi-9999">
    <h1>Créer une roadmap</h1>

    <%= simple_form_for @roadmap do |f| %>
      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Nom" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Créer", class: "btn-white" %>
      </div>
    <% end %>

  </div>

</div>

<!-- Afficher un loader cool si j'ai créé mon user avant de créer la roadmap : -->
<% if request.referrer.last(7) == 'sign_up' %>
  <%= render 'components/loader_signup' %>
<% end %>
display: flex;
    height: 100vh;
    justify-content: space-around;
